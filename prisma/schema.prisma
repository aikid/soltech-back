generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String
  name      String
  cpf       String?  @unique
  phone     String?
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}
